@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>USUARIOS:</h2>
            <hr />
        </div>

    </div>

</div>
<br />

<div class="container">
    <div class="row">
        <div class="col-md-1" style="padding-left:100px">
            <button type="button" class="btn btn-success" id="btnAdd" onclick="GetAll()">Agregar</button>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-1" style="padding-left:100px">
            <button type="button" class="btn btn-success" id="btnAdd" onclick="Limpiar()">Limpiar</button>
        </div>
    </div>

    <br />
    <br />

    <div class="row">
        <div class="col-md-12">
            <table id="tblUsuarios" class="table table-hover" border="1">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Editar</th>
                        <th class="text-center" scope="col">Id</th>
                        <th class="text-center" scope="col">Nombre  </th>
                        <th class="text-center" scope="col">Correo Electronico</th>
                        <th class="text-center" scope="col">Direccion</th>
                        <th class="text-center" scope="col">Genero</th>
                        <th class="text-center" scope="col">Imagen</th>
                        <th class="text-center" scope="col">Eliminar</th>
                    </tr>

                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</div>


<div class="modal fade" id="ModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Formulario Empleado</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="IdEm">Id Empleado:</label>
                        <input type="text" class="form-control" id="txtIdEmpleado" placeholder="Id Empleado" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label class="NM">Numero Nomina:</label>
                        <input type="text" class="form-control" id="txtNumeroNomina" placeholder="Numero de Nomina" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label class="Name">Nombre:</label>
                        <input type="text" class="form-control" id="TxtNombre" placeholder="Nombre(s)" />
                    </div>
                    <div class="form-group">
                        <label class="AP">Apellido Paterno:</label>
                        <input type="text" class="form-control" id="txtApellidoPaterno" placeholder="Apellido Paterno" />
                    </div>
                    <div class="form-group">
                        <label class="AM">Apellido Materno:</label>
                        <input type="text" class="form-control" id="txtApellidoMaterno" placeholder="Apellido Materno" />
                    </div>
                    <div class="form-group">
                        <label class="ddlEstado">Estado:</label>
                        <select name="ddlEstado" class="form-control" id="ddlEstado">
                        </select>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn glyphicon glyphicon-pencil" id="btnUpdate" onclick="Actualizar()">Actualizar</button>
                <button type="button" class="btn btn-danger" onclick="ModalClose()" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/JavaScriptEmpleado.js"></script>

